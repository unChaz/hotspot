<%= form_for @location, :html => { :multipart => true } do |f| %>
  <% if @location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
      <% @location.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="col-md-6">
    <p class="lead">Details</p>
    <div class="well">
      <%= f.label :name%><br>
      <div class="field lead">
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :lat %><br>
        <%= f.text_field :lat %>
      </div>
      <div class="field">
        <%= f.label :long %><br>
        <%= f.text_field :long %>
      </div>
      <div class="field">
        <%= f.label :description %><br>
        <%= f.text_area :description, :cols => "60", :rows => "10"%>
      </div>
    </div>

    <div class="actions">
      <%= f.submit 'Submit', :class => 'btn btn-success' %>
    </div>
  </div>

  <div class="col-md-6">
    <p class="lead">Images</p>
    <div class="well">
      <% unless @location.image1.blank? %>
      Current Image:
        <%= image_tag @location.image1.url(:medium) %>
      <% end %>
      <%= f.file_field :image1 %>
    </div>
    <div class="well">
      <% unless @location.image2.blank? %>
      Current Image:
        <%= image_tag @location.image2.url(:medium) %>
      <% end %>
      <%= f.file_field :image2 %>
    </div>
    <div class="well">
      <% unless @location.image3.blank? %>
      Current Image:
        <%= image_tag @location.image3.url(:medium) %>
      <% end %>
      <%= f.file_field :image3 %>
    </div>
    <div class="well">
      <% unless @location.image4.blank? %>
      Current Image:
        <%= image_tag @location.image4.url(:medium) %>
      <% end %>
      <%= f.file_field :image4 %>
    </div>
  </div>
</div>
<% end %>
